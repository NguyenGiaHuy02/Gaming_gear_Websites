@model List<Model.ViewModel.SanPhamBanPhimViewModel>
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/ProductListPage.cshtml";
}
@functions{
    public String byteArrayToImage(byte[] byteArrayIn)
    {
        var base64 = Convert.ToBase64String(byteArrayIn);
        var imgScr = String.Format("data:image/gif;base64,{0}", base64);
        return imgScr;
    }
}
@foreach (var item in Model)
{
    <div class="product-page">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="product-main-image">
                    <img src="@byteArrayToImage(item.HinhAnh1)" alt="@item.HinhAnh1" class="img-responsive" data-BigImgsrc="@byteArrayToImage(item.HinhAnh1)">
                </div>
                <div class="product-other-images">
                    <a href="@byteArrayToImage(item.HinhAnh2)" class="fancybox-button" rel="photos-lib"><img alt="@item.HinhAnh2" src="@byteArrayToImage(item.HinhAnh2)"></a>
                    <a href="@byteArrayToImage(item.HinhAnh3)" class="fancybox-button" rel="photos-lib"><img alt="@item.HinhAnh3" src="@byteArrayToImage(item.HinhAnh3)"></a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <h1>@item.TenSanPham</h1>
                <div class="price-availability-block clearfix">
                    <div class="price">
                        <strong>@item.GiaTien <span>đ</span></strong>
                    </div>
                </div>
                <div class="description">
                    <p>
                        @item.MoTa
                    </p>
                </div>
                <div class="product-page-cart">
                    <div class="product-quantity">
                        <input id="product-quantity" type="text" value="1" readonly class="form-control input-sm">
                    </div>
                    <a href="/them-gio-hang?masp=@item.MaSanPham&soluong=1" class="btn btn-default add2cart">Đặt hàng</a>
                </div>
            </div>

            <div class="product-page-content">
                <ul id="myTab" class="nav nav-tabs">
                    <li><a href="#Description" data-toggle="tab">Description</a></li>
                    <li class="active"><a href="#Information" data-toggle="tab">Information</a></li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade" id="Description">
                        <p>@item.MoTa</p>
                    </div>
                    <div class="tab-pane fade in active" id="Information">
                        <table class="datasheet">
                            <tr>
                                <th colspan="2">Thông tin sản phẩm </th>
                            </tr>
                            <tr>
                                <td class="datasheet-features-type">Tên Hãng</td>
                                <td>@item.TenHang</td>
                            </tr>
                            <tr>
                                <td class="datasheet-features-type">Switch</td>
                                <td>@item.Switch</td>
                            </tr>
                            <tr>
                                <td class="datasheet-features-type">Lực nhấn </td>
                                <td>@item.LucNhan</td>
                            </tr>
                            <tr>
                                <td class="datasheet-features-type">Kết nối</td>
                                <td>@item.KetNoi</td>
                            </tr>
                            <tr>
                                <td class="datasheet-features-type">Số lượng nút </td>
                                <td>@item.SoLuongNut</td>
                            </tr>
                            <tr>
                                <td class="datasheet-features-type">LED</td>
                                <td>@item.LED</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

