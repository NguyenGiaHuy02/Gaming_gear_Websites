@model List<Model.EF.HinhAnhSanPham>
@{
    ViewBag.Title = "TableHinhAnhSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

@functions{
    public String byteArrayToImage(byte[] byteArrayIn)
    {
        var base64 = Convert.ToBase64String(byteArrayIn);
        var imgScr = String.Format("data:image/gif;base64,{0}", base64);
        return imgScr;
    }
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">HÌNH ẢNH SẢN PHẨM</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dữ liệu hình ảnh sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="table1">
                        <thead>
                            <tr>
                                <th style="width:13%">Mã Hình Ảnh</th>
                                <th style="width:29%">Hình 1</th>
                                <th style="width:29%">Hình 2</th>
                                <th style="width:29%">Hình 3</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.MaHinhAnh</td>
                                    <td><img src="@byteArrayToImage(item.HinhAnh1)" class="img-responsive" alt="@item.HinhAnh1"></td>
                                    <td><img src="@byteArrayToImage(item.HinhAnh2)" class="img-responsive" alt="@item.HinhAnh2"></td>
                                    <td><img src="@byteArrayToImage(item.HinhAnh3)" class="img-responsive" alt="@item.HinhAnh3"></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


@section customScript {
    <script>
        $(document).ready(function () {
            $('#table1').DataTable();
        });
    </script>
}
